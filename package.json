{
  "name": "coda",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "app:dev": "pnpm --filter @coda/app tauri dev",
    "app:build": "pnpm --filter @coda/app tauri build",
    "cli:dev": "pnpm --filter @coda/cli exec node dist/main.js --help",
    "cli:build": "pnpm --filter @coda/cli build",
    "lint": "pnpm -r lint && pnpm lint:boundaries",
    "lint:boundaries": "node ./tools/validate-boundaries.mjs",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "build": "pnpm -r build",
    "validate": "pnpm lint && pnpm typecheck && pnpm test && pnpm build",
    "smoke:cli:help": "pnpm --filter @coda/cli exec coda --help",
    "smoke:cli:status": "pnpm --filter @coda/cli exec coda status",
    "smoke:app:dev": "pnpm --filter @coda/app tauri dev",
    "smoke:app:build": "pnpm --filter @coda/app tauri build"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
